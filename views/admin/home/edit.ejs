<%- include('../../admin/header.ejs')  %>

<div class="container  ">
    <div class="row">
     <div class="col-md-1"></div>
      <div class="col-md-10 ">
        <h1 class="pt-4 pb-3 text-success">Slider Update</h1>
        <form action="/sliderupdate/<%= edit.id %>" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="">Title</label>
                <input type="text" class="form-control" name="title" value="<%= edit.title %>"> 
            </div>
            <div class="mb-3">
                <label for="">Description</label><br>
                <textarea name="description"class="form-control" id="" cols="80" rows="7" ><%= edit.title %></textarea>
            </div>
            <div class="mb-3">
              <label for="">Upload Image</label>
              <input type="file" name="image" class="form-control">
            </div>
            <img src="<%= edit.image.url %>"width="100px">
            <button type="submit"class="btn btn-success">Update</button>
            </form>
            </div>
            <div class="col-md-1"></div>
            
    
      </div>
      </div>
      </div>
      
