<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                          <strong class="card-title  text-success">Slider Table</strong>
                        </div>
                        <div>
                          <!-- Button trigger modal -->
                          <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Add home Slider</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead class="bg-success text-white">
                                <tr>
                                  
                                    <th>Title</th>
                                    <th>Description</th>
                                  
                                    <th>Image</th>
                                    <th class="text-center"> Action</th>
  
                                </tr>
                            </thead>
                            <tbody>
                              <% d.forEach((item)=>{ %>
                                <tr>
                                   
                                  <td><%= item.title %></td>
                                  <td><%= item.description %></td>
                                    <td><img src= "<%= item.image.url %>" width="50px" ></td>   
                                  
                                  
                              <td class="text-center">
                                <a href="/admin/home/sliderview/<%= item._id %>" class="btn btn-success"
                                  >view</i
                                ></a>
                                  <a href="/admin/sliderdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                  <a href="/admin/home/slideredit/<%= item._id %>" class="btn btn-success">Edit</a>
                              </td>
                              
                              </tr>
                              
                              <% }) %>
  
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
  
  
  </div><!-- .content -->
  </div><!-- /#right-panel -->
  
  
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Enter Student Details Details</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form  method="post"  action="/insertslider" enctype="multipart/form-data">
               
              <div class="mb-3">
                <label for="">Title</label>
                <input type="text" name="title" class="form-control">
              </div>

              <div class="mb-3">
                <label for="">Description</label>
                <textarea type="text" name="description" class="form-control">
                </textarea></div>
                <div class="mb-3">
                  <label for="">Upload image</label>
                  <input type="file" name="image" class="form-control" />
                </div> 
              <div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
        </div>
        </div>
        
     

