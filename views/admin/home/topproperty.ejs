<%-include('../../admin/sidebar.ejs')  %>
<%- include('../../admin/header.ejs')  %>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                          <strong class="card-title text-success">Property Table</strong>
                        </div>
                        <div>
                          <!-- Button trigger modal -->
                          <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Property</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead class="bg-success text-white">
                                <tr>
                                  
                                  <th>s.no.</th>
                                    <th>Flatname</th>
                                    <th>Type</th>
                                    <th>Prize</th>
                                     <th>Location</th>
                                     <th>Flat for</th>
                                     <!-- <th>Area</th>
                                     <th>Bath</th> -->
                                     <!-- <th>Facility</th> -->
                                    <th>Image</th>
                                    <!-- <th>All Image</th> -->
                                   
                                    <!-- <th>Status</th> -->
                                    <th> Action</th>
  
                                </tr>
                            </thead>
                            <tbody>
                              <% i=1 %>
                              <% p.forEach((item)=>{ %>
                                <tr>
                                  <td><%= i++ %></td>
                                  <td><%= item.flatname %></td>
                                  <td><%= item.type %></td>
                                  <td><%= item.prize %></td>
                                  <td><%= item.location %></td>
                                  <td><%= item.flatfor %></td>
                                  <!-- <td><%= item.area %></td>
                                  <td><%= item.bath %></td> -->
                                  <!-- <td><%= item.facility %></td> -->
                                  

                                    <td><img src= "<%= item.f_image.url %>" width="100px"></td>
                                    <!-- <td>
                                      <% item.all_image.forEach((imageshow)=>{ %>
                                        <img src= "<%= imageshow.url %>" width="100px">
                                      <% }) %>
                                      </td> -->
                                    <!-- <td><%= item.status %></td> -->

                                   
                                    
                                  
                                  
                              <td>
                                <a href="/admin/toppropertyview/<%= item._id %>" class="btn btn-success"
                                  >view</i
                                ></a>
                              </a>
                              <a href="/admin/toppropertydelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                                <a href="/admin/toppropertyedit/<%= item._id %>" class="btn btn-success"
                                  >Edit</i
                                >
                              </td>
                              
                              </tr>
                              <% }) %>
                              
                             
  
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
  
  
  </div><!-- .content -->
  </div><!-- /#right-panel -->
  
  
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Enter Flat Details</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form  method="post"  action="/insertproperty" enctype="multipart/form-data">
               
              <div class="mb-3">
                <label for="">Flat Name</label>
                <input type="text" name="flatname" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Type of Property</label>
                <input type="text" name="type" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Prize</label>
                <input type="text" name="prize" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Location</label>
                <input type="text" name="location" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Flat For..</label>
                <input type="text" name="flatfor" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Area</label>
                <input type="text" name="area" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Bath</label>
                <input type="text" name="bath" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Facility</label>
                <input type="text" name="facility" class="form-control">
              </div>
              <div class="mb-3">
                <label for="">Status</label>
                <input type="text" name="status" class="form-control">
              </div>

              
                <div class="mb-3">
                  <label for="">Upload Front image</label>
                  <input type="file" name="f_image" class="form-control" />
                </div>

                <div class="mb-3">
                  <label for="">Upload All image</label>
                  <input type="file" name="all_image" class="form-control" multiple />
                </div>
                
               

              <div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
        </div>
        </div>
        
     

<%- include('../../admin/footer.ejs')  %>