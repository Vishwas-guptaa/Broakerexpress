<%- include('./header.ejs') %>
  <div class="container-fluid bg-success">
    <br />
    <div class="container py-5">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-10">
          <div class="card">
            <div class="row">
              <div class="col-md-6 col-lg-6 d-none d-md-block">
                <br /><br />
                <img
                  src=""
                  alt="login form" class="img-fluid mt-5" />
              </div>
              <div class="col-md-6 align-items-center">
                <div class="card-body bg-dark">
                  <div class="text-center">
                    <img src="/img/logo.png" class="" width="120px"
                      height="120px" alt="...." />
                  </div>
                  <h3 class="text-center text-success mb-3 pb-3 mt-4">
                    Register Here
                  </h3>
                  <% if(message.length > 0 ){ %>
                    <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                  <form action="/adminregister"  method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <input type="text" placeholder="Name" name="name" id="firstname" class="form-control mt-3" />
                      <span id="first" class="text-info"></span>
                    </div>

                    <div class="form-group">
                      <input type="email" placeholder="Email" name="email" class="form-control mt-3" />
                    </div>
                    <div class="form-group">
                      <input type="password" placeholder="Password" id="myInput1" name="password"
                        class="form-control mt-3" />
                    </div>
                    <div class="form-group">
                      <input type="password" placeholder="Confirm Password" id="myInput" name="confirmpassword"
                        class="form-control mt-3" />
                    </div>
                    <div class="form-group text-center">
                      <button type="submit" class="btn btn-success mt-3 mb-3 text-white">
                        Register</button><br />
                      <span class="text-center text-white pt-3">HAVE AN ACCOUNT?
                        <a class="text-success" href="/login">LOGIN NOW</a>
                      </span>
                     
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br /><br />
  </div>
  </body>

  </html>